<%- include("partials/_header") %>

  <div class="container mt-5">
    <div class="row">
      <div class="col-md-7">
        <table class="table table-dark table-bordered table-hover">
          <thead>
            <tr>
              <td>Id</td>
              <td>First Name</td>
              <td>Last Name</td>
              <td>Type</td>
              <td>Room number</td>
            </tr>
          </thead>
          <tbody>
            <% if (Workers) { %>
              <% for(var i=0; i < Workers.length; i++) { %>
                <tr>
                  <td>
                    <%= Workers[i].workerId %>
                  </td>
                  <td>
                    <%= Workers[i].workerFirstName %>
                  </td>
                  <td>
                    <%= Workers[i].workerLastName %>
                  </td>
                  <td>
                    <%= Workers[i].type %>
                  </td>
                  <td>
                    <%= Workers[i].roomNum %>
                  </td>
                  <td class="d-flex gap-2">
                    <a href="/updateWorkers/<%= Workers[i].workerId %>" class="btn btn-info">
                      Edit
                    </a>
                    <a href="/deleteWorkers/<%= Workers[i].workerId %>" class="btn btn-danger">
                      Delete
                    </a>
                  </td>
                </tr>
                <% } %>
                  <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="container mt-5">
    <div class="row">
      <div class="col-md-5">
        <div class="card-body">
          <form action="/addWorkers" method="POST">
            <input type="text" name="workerFirstName" placeholder="First Name" class="form-control mb-2" autofocus />
            <input type="text" name="workerLastName" placeholder="Last Name" class="form-control mb-2" />
            <input type="text" name="type" placeholder="Type" class="form-control mb-2" />
            <input type="text" name="roomNum" placeholder="Room number" class="form-control mb-2" />

            <button type="submit" class="btn btn-info">Add Worker</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <%- include("partials/_footer") %>