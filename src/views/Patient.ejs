<%- include("partials/_header") %>

  <div class="container mt-5">
    <div class="row">
      <div class="col-md-7">
        <table class="table table-dark table-bordered table-hover">
          <thead>
            <tr>
              <td>Id</td>
              <td>First Name</td>
              <td>Last Name</td>
              <td>Describtion</td>
              <td>Age</td>
              <td>Gender</td>
              <td>Phone Number</td>
              <td>Disease</td>
              <td>Treatment</td>
            </tr>
          </thead>
          <tbody>
            <% if (patients) { %>
              <% for(var i=0; i < patients.length; i++) { %>
                <tr>
                  <td>
                    <%= patients[i].patientId %>
                  </td>
                  <td>
                    <%= patients[i].firstName %>
                  </td>
                  <td>
                    <%= patients[i].lastName %>
                  </td>
                  <td>
                    <%= patients[i].description %>
                  </td>
                  <td>
                    <%= patients[i].age %>
                  </td>
                  <td>
                    <%= patients[i].gender %>
                  </td>
                  <td>
                    <%= patients[i].phoneNum %>
                  </td>
                  <td>
                    <%= patients[i].disease %>
                  </td>
                  <td>
                    <%= patients[i].treatmentId %>
                  </td>
                  <td class="d-flex gap-2">
                    <a href="/updatePatient/<%= patients[i].patientId %>" class="btn btn-info">
                      Edit
                    </a>
                    <a href="/deletePatient/<%= patients[i].patientId %>" class="btn btn-danger">
                      Delete
                    </a>
                  </td>
                </tr>
                <% } %>
                  <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="container mt-5">
    <div class="row">
      <div class="col-md-5">
        <div class="card-body">
          <form action="/addPatient" method="POST">
            <input type="text" name="firstName" placeholder="First Name" class="form-control mb-2" autofocus />
            <input type="text" name="lastName" placeholder="Last Name" class="form-control mb-2" />
            <input type="text" name="description" placeholder="Describtion" class="form-control mb-2" />
            <input type="text" name="age" placeholder="Age" class="form-control mb-2" />
            <input type="text" name="gender" placeholder="Gender" class="form-control mb-2" />
            <input type="text" name="phoneNum" placeholder="Phone Number" class="form-control mb-2" />
            <input type="text" name="disease" placeholder="Diseas" class="form-control mb-2" />
            <input type="text" name="treatmentId" placeholder="Treatment" class="form-control mb-2" />

            <button type="submit" class="btn btn-info">Add Patient</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <%- include("partials/_footer") %>