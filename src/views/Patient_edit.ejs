<%- include("partials/_header") %>

  <div class="container mt-5">
    <div class="row">
      <div class="col-md-5 offset-md-3 card bg-dark">
        <div class="card-body">
          <form action="/updatePatient/<%= Patient.patientId %>" method="POST">
            <input type="text" name="firstName" value="<%= Patient.firstName %>" placeholder="First Name"
              class="form-control mb-3" autofocus />
            <input type="text" name="lastName" value="<%= Patient.lastName%>" placeholder="Last Name"
              class="form-control mb-3" />
            <input type="text" name="description" value="<%= Patient.description%>" placeholder="Describtion"
              class="form-control mb-3" />
            <input type="text" name="age" value="<%= Patient.age%>" placeholder="Age" class="form-control mb-3" />
            <input type="text" name="gender" value="<%= Patient.gender%>" placeholder="Gender"
              class="form-control mb-3" />
            <input type="text" name="phoneNum" value="<%= Patient.phoneNum%>" placeholder="Phone number"
              class="form-control mb-3" />
            <input type="text" name="disease" value="<%= Patient.disease%>" placeholder="Disease"
              class="form-control mb-3" />
            <input type="text" name="treatmentId" value="<%= Patient.treatmentId%>" placeholder="Treatment Id"
              class="form-control mb-3" />

            <button type="submit" class="btn btn-primary">save pateint</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <%- include("partials/_footer") %>