<%- include("partials/_header") %>

  <div class="container mt-5">
    <div class="row">
      <div class="col-md-5 offset-md-3 card bg-dark">
        <div class="card-body">
          <form action="/updateBill/<%= bill.billId %>" method="POST">
            <input type="text" name="patientId" value="<%= bill.patientId %>" placeholder="Patient Id"
              class="form-control mb-3" autofocus />
            <input type="text" name="bill" value="<%= bill.bill%>" placeholder="Bill" class="form-control mb-3" />

            <button type="submit" class="btn btn-primary">save bill</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <%- include("partials/_footer") %>