<%- include("partials/_header") %>

  <div class="container mt-5">
    <div class="row">
      <div class="col-md-7">
        <table class="table table-dark table-bordered table-hover">
          <thead>
            <tr>
              <td>Id</td>
              <td>First Name</td>
              <td>Last Name</td>
              <td>Actions</td>
            </tr>
          </thead>
          <tbody>
            <% if (doctors) { %>
              <% for(var i=0; i < doctors.length; i++) { %>
                <tr>
                  <td>
                    <%= doctors[i].drId %>
                  </td>
                  <td>
                    <%= doctors[i].drFirstName %>
                  </td>
                  <td>
                    <%= doctors[i].drLastName %>
                  </td>
                  <td class="d-flex gap-2">
                    <a href="/updateDoctor/<%= doctors[i].drId %>" class="btn btn-info">
                      Edit
                    </a>
                    <a href="/deleteDoctor/<%= doctors[i].drId %>" class="btn btn-danger">
                      Delete
                    </a>
                  </td>
                </tr>
                <% } %>
                  <% } %>
          </tbody>
        </table>
        <div class="container mt-5">
          <div class="row">
            <div class="col-md-5">
              <div class="card-body">
                <form action="/addDoctor" method="POST">
                  <input type="text" name="drFirstName" placeholder="First Name" class="form-control mb-2" autofocus />
                  <input type="text" name="drLastName" placeholder="Last Name" class="form-control mb-2" />

                  <button type="submit" class="btn btn-info">Add Doctor</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  <%- include("partials/_footer") %>